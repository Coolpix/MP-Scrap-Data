{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",                          
    "module": "commonjs",   
    "moduleResolution": "node",                 
    "lib": ["es6","dom","es2015.promise"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitHelpers": false,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "node", 
      "express"
    ]
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
